<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/battle_display"
     >
     <!--   android:background="@drawable/battle_display" -->
     
  
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" 
        android:layout_marginTop="10dp">
        
        
        <TextView
            android:id="@+id/tv_namePlayer1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="96dp"
            android:textColor="#FFFFFF"
            android:textSize="20dp"
            android:text="Name player 1" />
        
        <ImageView
        android:id="@+id/imageView1"
        android:layout_width="350dp"
        android:layout_height="100dp"
        android:src="@drawable/progressbar1"/>
        
        <ProgressBar
        android:id="@+id/pb_life"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="213dp"
        android:layout_height="12dp"
        android:layout_marginLeft="69dp"
        android:layout_marginTop="55dp"
        android:progress="100"
        android:indeterminate="false"
        android:progressDrawable="@drawable/progressbar_red" />

        <TextView
            android:id="@+id/tv_life"
            android:layout_width="50dp"
            android:layout_height="10dp"
            android:layout_marginTop="55dp"
            android:layout_marginLeft="284dp"
            android:text="TextView"
            android:textSize="8dp"
            android:textColor="#FFFFFF" />
        
        <ProgressBar
            android:id="@+id/pb_mana"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="213dp"
        	android:layout_height="11dp"
       		android:layout_marginLeft="69dp"
            android:layout_marginTop="67dp"
            android:indeterminate="false"
            android:progress="100"
            android:progressDrawable="@drawable/progressbar_blue" />

        <TextView
            android:id="@+id/tv_mana"
            android:layout_width="100dp"
            android:layout_height="10dp"
            android:layout_marginTop="70dp"
            android:layout_marginLeft="285dp"
            android:text="TextView"
            android:textSize="8dp"
            android:textColor="#FFFFFF" />

        <ImageView
            android:id="@+id/avatarPlayer1"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="45dp"
            android:layout_marginTop="6dp"
            android:background="@drawable/ic_launcher" />
        
    </RelativeLayout>
    
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        
        <ImageView
            android:id="@+id/vsseparator"
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:background="@drawable/separatorvs" />
    </LinearLayout>    
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >
        
        <TextView
            android:id="@+id/tv_namePlayer2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="110dp"
            android:textColor="#FFFFFF"
            android:textSize="20dp"
            android:text="Name player 2" />
        
        <ImageView
        android:id="@+id/baseprogressbar2"
        android:layout_width="350dp"
        android:layout_height="100dp"
        android:src="@drawable/progressbar2"/>
        
        <ProgressBar
        android:id="@+id/pb_contrincantLife"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="213dp"
        android:layout_height="12dp"
        android:layout_marginLeft="69dp"
        android:layout_marginTop="55dp"
        android:progress="100"
        android:indeterminate="false"
        android:progressDrawable="@drawable/progressbar_red2" />

        <TextView
            android:id="@+id/tv_contrincantLife"
            android:layout_width="100dp"
            android:layout_height="10dp"
            android:layout_marginTop="55dp"
            android:layout_marginLeft="32dp"
            android:text="TextView"
            android:textSize="8dp"
            android:textColor="#FFFFFF" />
        
        <ProgressBar
        android:id="@+id/pb_contrincantMana"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="213dp"
        android:layout_height="11dp"
       	android:layout_marginLeft="69dp"
        android:layout_marginTop="67dp"
        android:progress="100"
        android:indeterminate="false"
        android:progressDrawable="@drawable/progressbar_blue2" />

        <TextView
            android:id="@+id/tv_contrincantMana"
            android:layout_width="100dp"
            android:layout_height="10dp"
            android:layout_marginTop="70dp"
            android:layout_marginLeft="30dp"
            android:text="TextView"
            android:textSize="8dp"
            android:textColor="#FFFFFF" />

        <ImageView
            android:id="@+id/avatarPlayer2"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="265dp"
            android:layout_marginTop="6dp"
            android:background="@drawable/ic_launcher" />
        
    </RelativeLayout>
    
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="90dp">
        
        <Button
        android:id="@+id/btn_defense"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginLeft="10dp"
        android:background="@drawable/button_blockbutton_modified_states"
        android:textColor="#FFFFFF"
        android:onClick="onClick" />
        
        <Button
        android:id="@+id/btn_superAttack"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginLeft="50dp"
        android:background="@drawable/button_specialbutton_modified_states"
        android:onClick="onClick"
        android:textColor="#FFFFFF" />
        
        <Button
        android:id="@+id/btn_spell1"
        android:layout_marginLeft="50dp"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="@drawable/button_special1_modified_states"
        android:textColor="#FFFFFF"
        android:onClick="onClick" />
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="30dp" >
        
        <Button
        android:id="@+id/btn_dodge"
        android:layout_marginLeft="10dp"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="@drawable/button_dodgebutton_modified_states"
        android:textColor="#FFFFFF"
        android:onClick="onClick" />
        
        
    
        <Button
        android:id="@+id/btn_spell2"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginLeft="50dp"
        android:background="@drawable/button_special2_modified_states"
        android:textColor="#FFFFFF"
        android:onClick="onClick" />
        
        <Button
        android:id="@+id/btn_normalAttack"
        android:layout_marginLeft="50dp"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:textColor="#FFFFFF"
        android:onClick="onClick" />
    </LinearLayout>
    
    


</LinearLayout>