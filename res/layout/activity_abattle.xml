<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/bg_generic2"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" 
        android:layout_marginTop="5dp">
        
        <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/barrbase" />
        
        <ProgressBar
        android:id="@+id/pb_life"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="270dp"
        android:layout_height="40dp"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="30dp"
        android:progress="1"
        android:indeterminate="false"
        android:progressDrawable="@drawable/progressbar_red" />

        <TextView
            android:id="@+id/tv_life"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="70dp"
            android:layout_marginLeft="20dp"
            android:text="TextView"
            android:textSize="20dp"
            android:textColor="#FFFFFF" />
        
    </RelativeLayout>
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" 
        android:layout_marginTop="5dp">
        
        <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/barrbase" />
        
        <ProgressBar
        android:id="@+id/pb_mana"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="270dp"
        android:layout_height="40dp"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="30dp"
        android:progress="1"
        android:indeterminate="false"
        android:progressDrawable="@drawable/progressbar_blue" />

        <TextView
            android:id="@+id/tv_mana"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="70dp"
            android:layout_marginLeft="20dp"
            android:text="TextView"
            android:textSize="20dp"
            android:textColor="#FFFFFF" />
        
    </RelativeLayout>
    
    
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" 
        android:layout_marginTop="5dp">
        
        <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/barrbase" />
        
        <ProgressBar
        android:id="@+id/pb_contrincantLife"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="270dp"
        android:layout_height="40dp"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="30dp"
        android:progress="1"
        android:indeterminate="false"
        android:progressDrawable="@drawable/progressbar_red" />

        <TextView
            android:id="@+id/tv_contrincantLife"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="70dp"
            android:layout_marginLeft="20dp"
            android:text="TextView"
            android:textSize="20dp"
            android:textColor="#FFFFFF" />
        
    </RelativeLayout>
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" 
        android:layout_marginTop="5dp">
        
        <ImageView
        android:id="@+id/imageView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/barrbase" />
        
        <ProgressBar
        android:id="@+id/pb_contrincantMana"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="270dp"
        android:layout_height="40dp"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="30dp"
        android:progress="1"
        android:indeterminate="false"
        android:progressDrawable="@drawable/progressbar_blue" />

        <TextView
            android:id="@+id/tv_contrincantMana"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="70dp"
            android:layout_marginLeft="20dp"
            android:text="TextView"
            android:textSize="20dp"
            android:textColor="#FFFFFF" />
        
    </RelativeLayout>
    
    
    
    
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp" >
        
        <Button
        android:id="@+id/btn_dodge"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:background="@drawable/button_modified_states"
        android:textColor="#FFFFFF"
        android:onClick="onClick"
        android:text="@string/btn_dodge" />
        
        <Button
        android:id="@+id/btn_normalAttack"
        android:layout_marginLeft="15dp"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:background="@drawable/button_modified_states"
        android:textColor="#FFFFFF"
        android:onClick="onClick"
        android:text="@string/btn_normalAttack" />
    

    <Button
        android:id="@+id/btn_superAttack"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:layout_marginLeft="20dp"
        android:background="@drawable/button_modified_states"
        android:onClick="onClick"
        android:text="@string/btn_superAttack"
        android:textColor="#FFFFFF" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="30dp" >
    
        <Button
        android:id="@+id/btn_spell2"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:layout_marginLeft="10dp"
        android:background="@drawable/button_modified_states"
        android:textColor="#FFFFFF"
        android:onClick="onClick"
        android:text="@string/btn_spell2" />
        
        <Button
        android:id="@+id/btn_defense"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:background="@drawable/button_modified_states"
        android:textColor="#FFFFFF"
        android:onClick="onClick"
        android:text="@string/btn_defense" />
        
        
    
    <Button
        android:id="@+id/btn_spell1"
        android:layout_marginLeft="15dp"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:background="@drawable/button_modified_states"
        android:textColor="#FFFFFF"
        android:onClick="onClick"
        android:text="@string/btn_spell1" />
        
        
    </LinearLayout>

</LinearLayout>