<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/battle_display"
    android:orientation="vertical"
    tools:ignore="HardcodedText,ContentDescription,SmallSp" >

    <!-- android:background="@drawable/battle_display" -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="300dp"
            android:layout_height="80dp"
            android:layout_centerInParent="true"
            android:src="@drawable/progressbar1" />

        <ImageView
            android:id="@+id/avatarPlayer1"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="73dp" />

        <ProgressBar
            android:id="@+id/pb_life"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="171dp"
            android:layout_height="10dp"
            android:layout_below="@+id/tv_namePlayer1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:indeterminate="false"
            android:progress="100"
            android:progressDrawable="@drawable/progressbar_red" />

        <ProgressBar
            android:id="@+id/pb_mana"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="171dp"
            android:layout_height="10dp"
            android:layout_below="@+id/pb_life"
            android:layout_centerHorizontal="true"
            android:indeterminate="false"
            android:progress="100"
            android:progressDrawable="@drawable/progressbar_blue" />

        <TextView
            android:id="@+id/tv_namePlayer1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="10dp"
            android:text="Name player 1"
            android:textColor="#FFFFFF"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tv_life"
            android:layout_width="50dp"
            android:layout_height="10dp"
            android:layout_above="@+id/pb_mana"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="000/000"
            android:textColor="#FFFFFF"
            android:textSize="7sp" />

        <TextView
            android:id="@+id/tv_mana"
            android:layout_width="100dp"
            android:layout_height="10dp"
            android:layout_alignTop="@+id/pb_mana"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="000/000"
            android:textColor="#FFFFFF"
            android:textSize="7sp" />

    </RelativeLayout>

    <ImageView
        android:id="@+id/vsseparator"
        android:layout_width="220dp"
        android:layout_height="48dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/separatorvs" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/baseprogressbar2"
            android:layout_width="300dp"
            android:layout_height="80dp"
            android:layout_alignParentTop="true"
            android:layout_centerInParent="true"
            android:src="@drawable/progressbar2" />

        <ProgressBar
            android:id="@+id/pb_contrincantMana"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="171dp"
            android:layout_height="10dp"
            android:layout_below="@+id/pb_contrincantLife"
            android:layout_centerHorizontal="true"
            android:indeterminate="false"
            android:progress="100"
            android:progressDrawable="@drawable/progressbar_blue2" />

        <ImageView
            android:id="@+id/avatarPlayer2"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="73dp"
            android:layout_marginTop="3dp" />

        <ProgressBar
            android:id="@+id/pb_contrincantLife"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="170dp"
            android:layout_height="10dp"
            android:layout_below="@+id/tv_namePlayer2"
            android:layout_centerInParent="true"
            android:layout_marginTop="15dp"
            android:indeterminate="false"
            android:progress="100"
            android:progressDrawable="@drawable/progressbar_red2" />

        <TextView
            android:id="@+id/tv_namePlayer2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="120dp"
            android:layout_marginTop="5dp"
            android:gravity="right"
            android:text="Name player 2"
            android:textColor="#FFFFFF"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tv_contrincantMana"
            android:layout_width="100dp"
            android:layout_height="10dp"
            android:layout_alignTop="@+id/pb_contrincantMana"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="000/000"
            android:textColor="#FFFFFF"
            android:textSize="7sp" />

        <TextView
            android:id="@+id/tv_contrincantLife"
            android:layout_width="100dp"
            android:layout_height="10dp"
            android:layout_alignLeft="@+id/tv_contrincantMana"
            android:layout_alignTop="@+id/pb_contrincantLife"
            android:gravity="center"
            android:text="000/000"
            android:textColor="#FFFFFF"
            android:textSize="7sp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_marginBottom="15dp"
        android:gravity="bottom" >

        <Button
            android:id="@+id/btn_spell1"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="35dp"
            android:background="@drawable/button_special2_modified_states"
            android:onClick="onClick"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/btn_superAttack"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignTop="@+id/btn_defense"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:background="@drawable/button_specialbutton_modified_states"
            android:onClick="onClick"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/btn_spell2"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_alignRight="@+id/btn_spell1"
            android:layout_alignTop="@+id/btn_spell1"
            android:layout_marginRight="85dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/button_special1_modified_states"
            android:onClick="onClick"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/btn_normalAttack"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_below="@+id/btn_spell1"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@+id/btn_superAttack"
            android:onClick="onClick"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/btn_dodge"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignBottom="@+id/btn_spell2"
            android:layout_marginRight="9dp"
            android:layout_toLeftOf="@+id/btn_superAttack"
            android:background="@drawable/button_dodgebutton_modified_states"
            android:onClick="onClick"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/btn_defense"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignRight="@+id/btn_dodge"
            android:layout_below="@+id/btn_dodge"
            android:layout_marginRight="9dp"
            android:background="@drawable/button_blockbutton_modified_states"
            android:onClick="onClick"
            android:textColor="#FFFFFF" />
    </RelativeLayout>

</LinearLayout>