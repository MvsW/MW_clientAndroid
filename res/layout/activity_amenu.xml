<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/bg_generic2"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/iv_LogoMenu"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_gravity="center"
        android:layout_marginTop="35dp"
        android:src="@drawable/logo" />

    <Button
        android:id="@+id/btn_battle"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:background="@drawable/button_modified_states"
        android:onClick="onClick"
        android:text="@string/btn_battle"
        android:textColor="#FFFFFF" />

    <Button
        android:id="@+id/btn_showData"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="@drawable/button_modified_states"
        android:onClick="onClick"
        android:text="@string/btn_showData"
        android:textColor="#FFFFFF" />
    
</LinearLayout>
